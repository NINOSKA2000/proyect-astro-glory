<div class="container m-auto py-12 xl:py-16" id="team">
  <h2 class="font-bold text-4xl mb-8 text-center md:mb-16 xl:text-5xl">Team</h2>
  <div
    class="flex flex-col justify-center items-center px-8 gap-6 md:flex-row md:flex-wrap md:gap-10"
  >
    { team.map((member) => (
      <div class="flex flex-col max-w-[400px]">
        <picture>
          <source srcset={member.img} media="(min-width: 1080px)" />
          <img
            class="rounded-full h-[250px] w-[250px] m-auto lg:rounded-[200px] lg:h-[245px] lg:w-[400px] xl:h-[245px] xl:overflow-hidden object-cover xl:rounded-[200px]"
